<Window
    x:Class="WPFDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Control="clr-namespace:WPFDemo.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <WrapPanel Orientation="Vertical">
                    <Button
                        Name="ForceFresh"
                        Click="ForceFresh_Click"
                        Content="强制重新刷新界面（用于测试内存占用）" />
                    <!--<TextBlock Margin="5">测试</TextBlock>-->
                </WrapPanel>
                <StackPanel Name="MessageBoxs">
                    <StackPanel.Resources>
                        <Style TargetType="Control:MessageCardUI">
                            <Setter Property="Margin" Value="10" />
                            <Setter Property="Width" Value="500" />
                        </Style>
                    </StackPanel.Resources>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
